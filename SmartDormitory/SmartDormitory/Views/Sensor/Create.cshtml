@model SmartDormitory.Web.Models.SensorViewModel
@{
    ViewData["Title"] = "Create";
}
<h2>Create</h2>
<meta name="viewport" content="width=device-width, initial-scale=1">

<div class="row">
    <div class="col-md-10">
        
        <form asp-controller="Sensor" asp-action="Create" method="post">
            <div style="overflow-x:auto;">
                <table>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <tr>
                        <th>
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </th>
                        <th>
                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </th>
                    </tr>
                    <tr>
                        <th>
                            <div class="form-group">
                                <label asp-for="PollingIntervalInSeconds"></label>
                                <input asp-for="PollingIntervalInSeconds" class="form-control" />
                                <span asp-validation-for="PollingIntervalInSeconds" class="text-danger"></span>
                            </div>
                        </th>
                        <th>
                            <div class="form-group">
                                <label asp-for="Latitude"></label>
                                <input asp-for="Latitude" class="form-control" />
                                <span asp-validation-for="Latitude" class="text-danger"></span>
                            </div>
                        </th>
                    </tr>
                    <tr>
                        <th>
                            <div class="form-group">
                                <label asp-for="Longitude"></label>
                                <input asp-for="Longitude" class="form-control" />
                                <span asp-validation-for="Longitude" class="text-danger"></span>
                            </div>
                        </th>
                        <th>
                            <div class="form-group">
                                <label asp-for="ValueRangeMin"></label>
                                <input asp-for="ValueRangeMin" class="form-control" />
                                <span asp-validation-for="ValueRangeMin" class="text-danger"></span>
                            </div>
                        </th>
                    </tr>
                    <tr>
                        <th>

                            <div class="form-group">
                                <label asp-for="ValueRangeMax"></label>
                                <input asp-for="ValueRangeMax" class="form-control" />
                                <span asp-validation-for="ValueRangeMax" class="text-danger"></span>
                            </div>
                        </th>
                        <th>
                            <div class="form-group">
                                <label asp-for="ApiId"></label>
                                <input asp-for="ApiId" class="form-control" />
                                <span asp-validation-for="ApiId" class="text-danger"></span>
                            </div>
                        </th>
                    </tr>
                    <tr>
                        <th>
                            <div class="form-group">
                                <label asp-for="IsPublic"></label>
                                <input asp-for="IsPublic" class="form-control" type="checkbox"/>
                                <span asp-validation-for="IsPublic" class="text-danger"></span>
                            </div>
                        </th>
                    </tr>
                </table>

                <button type="submit" class="btn btn-default">Create</button>
            </div>
        </form>
    </div>
</div>

@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.2/js/bootstrap-select.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
}
